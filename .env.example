# Chimera Trading System - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# DATA SOURCE CONFIGURATION - IBKR ONLY (NO SIMULATIONS)
# =============================================================================
# ONLY REAL IBKR DATA SUPPORTED - NO MOCK/SIMULATION DATA
DATA_SOURCE=ibkr

# =============================================================================
# INTERACTIVE BROKERS (IBKR) GATEWAY CONFIGURATION
# =============================================================================
# IBKR Gateway connection settings (NOT TWS)
IBKR_HOST=127.0.0.1
IBKR_PORT=4002          # 4002 for Gateway paper trading, 4001 for Gateway live
IBKR_CLIENT_ID=1        # Unique client ID (1-32)
IBKR_READONLY=false     # Set to false for trading capabilities

# IBKR Gateway Authentication (your credentials)
TWS_USERID=isht1430
TWS_PASSWORD=Gamma@1430Nav9464
TRADING_MODE=paper      # 'paper' or 'live'
ACCOUNT_CODE=DU2838017

# VNC access for Gateway GUI (optional)
VNC_PASSWORD=chimera123

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Symbols to trade (comma-separated)
TRADING_SYMBOLS=AAPL,MSFT,GOOGL,AMZN,TSLA,NVDA,META,SPY,QQQ

# Risk management settings
MAX_POSITION_SIZE=1000      # Maximum position size per symbol
MAX_PORTFOLIO_RISK=0.02     # Maximum portfolio risk (2%)
STOP_LOSS_PCT=0.015         # Stop loss percentage (1.5%)
TAKE_PROFIT_RATIO=2.0       # Take profit ratio (2:1)

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Logging level
LOG_LEVEL=INFO

# Database settings
DATABASE_PATH=./data/db/chimera_trading.db

# API settings
API_HOST=0.0.0.0
API_PORT=5000
FRONTEND_PORT=3000

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker network settings
DOCKER_NETWORK=chimera-trading-network

# Volume mounts
EXTERNAL_DATA_PATH=./external_data
DATABASE_VOLUME=./data/db
LOGS_VOLUME=./logs
CONFIG_VOLUME=./config

